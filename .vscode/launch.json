{
  "configurations": [
    {
      "name": "Build Sample React App",
      "command": "yarn build",
      "request": "launch",
      "type": "node-terminal",
      "cwd": "${workspaceFolder}/playground/sample-react-app",
      "outFiles": [
        "${workspaceFolder}/**/*.(m|c|)js",
        "${workspaceFolder}/**/*.(m|c|)ts",
        "**/node_modules/@yaml-js/**/*.(m|c|)js",
        "**/node_modules/@yaml-js/**/*.ts",
